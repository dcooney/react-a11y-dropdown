{
	"env": {
		"browser": true,
		"es6": true,
		"jest": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:jest/recommended",
		"plugin:prettier/recommended",
		"plugin:react-hooks/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"jest",
		"prettier",
		"react-hooks"
	],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true
			}
		],
		"react/display-name": "off"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}